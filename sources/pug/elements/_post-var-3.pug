mixin post-var-3(obj)
	.post(class=obj.postClass)
		.unit.unit-spacing-0(class=obj.unitClass)
			.unit__left
				a(href="single-post.html"): +jpg(obj.imgName)

			.unit__body
				.post-content
					.post-content-wrap
						.post-tags-wrap
							a.post-tags(href="#" class=obj.classTags)=obj.postTags1
							span ,
							=" "
							a.post-tags(href="#" class=obj.classTags)=obj.postTags2
						h4: a(href="single-post.html")=obj.postTitle
						.group-sm
							p.post-panel
								span.mdi.mdi-sm.mdi-clock
								time(datetime=obj.dateTime)=obj.postTime

							p.post-panel
								span.fl-justicons-visible6
								span=obj.postViews
						p=obj.postText
