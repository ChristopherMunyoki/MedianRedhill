extends  ../_skeleton

block variables
	- var activeIndex = 5
	- var pageName = 'About Us'
	- var pageClass = ''

block title
	title=pageName

block page
	// Page Header
	+navbar-default({})

	+page-title({
		title: pageName,
		imageName: 'breadcrumbs-about',
		path: [['Additional Pages', '#'], [pageName]]
	})

	section.section-md.bg-white
		.shell.shell-fluid-var-4
			.range.range-50.range-xs-90.range-lg-justify
				.cell-lg-9.cell-xs-12.cell-lg-container
					.range.range-50.range-md-100.range-center
						.cell-md-6.cell-sm-10
							.box-info.box-info-var-2.box-info-border
								.box-info-wrap
									h3 Our Team
									p Our blog couldn’t be what it is today without a friendly team of authors, bloggers, and journalists all over the US.
									+jpg('about-464x263', 'image-border')

						.cell-md-6.cell-sm-10
							.box-info.box-info-var-2.box-info-border
								.box-info-wrap
									h3 How it all began...
									p The story of Life News began over 7 years ago when four free-thinking bloggers launched their first ever website dedicated to various online publications.
									p Throughout its many years of development, and several transformations, our blog and its publications have been at the very heart of the communities which they serve - informing, educating, entertaining and inspiring them. Today Life News remains a thriving and innovative community media business, which is one of the leading privately-owned blogs.

									.group-lg
										h5 Follow Us
										+widget-list([
											{
												"icon": "icon-xs fa fa-facebook",
												"href": "#"
											},
											{
												"icon": "fa fa-twitter",
												"href": "#"
											},
											{
												"icon": "icon-xs fa fa-pinterest",
												"href": "#"
											},
											{
												"icon": "icon-xs fa fa-instagram",
												"href": "#"
											},
										], '', 'box-icon-social')

						.cell-xs-12.text-center
							.parallax-container
								.material-parallax.parallax
									+jpg('bg-home2-1920x1200')
								.parallax-content.section-parallax-1.parallax-inset-horizontal-15.context-dark
									.range.range-50.range-sm-center.range-md-middle
										.cell-xs-12
											h3.spacing-50 Join Our Newsletter
											p.spacing-50.text-width-500.offset-top-10 Subscribe to our newsletter and receive the latest top-rated lifestyle, beauty and health articles to your inbox. We don’t spam!

										.cell-xlg-8.cell-sm-10
											// RD Mailform
											form.rd-mailform.rd-mailform-lg.form-inline(data-form-output="form-output-global", data-form-type='subscribe', method='post', action='bat/rd-mailform.php')
												.form-wrap
													input#subscribe-email.form-input(type="email" name="email" data-constraints="@Email @Required")
													label.form-label.form-label-dark(for="subscribe-email") E-mail
												button(type="submit").button.button-lg.button-effect-ujarak.button-secondary-dark Subscribe

				.cell-lg-3.cell-xs-12
					.range.range-50.range-lg-90.range-center.post-sidebar
						.cell-lg-12.cell-md-4.cell-sm-6.text-center
							.post-sidebar-form.sidebar-border.offset-top-custom-1
								span.post-top Hot post
								.post-sidebar-form-content
									h4 5 Easy Ways for Women to Get Perfect Skin
									p These tips will help you make your skin look amazing in any season!
									a(href="single-post.html").button.button-lg.btn-anis.button-gray-1 Read more

						.cell-lg-12.cell-md-8.cell-sm-6.text-left
							p.sidebar-category Latest Posts
							include ../sections/_sidebar-post


	// Page Footer
	include ../sections/_footer-var-2