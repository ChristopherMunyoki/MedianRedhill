extends  ../_skeleton

//- Includes
include ../elements/_widget-list

block variables
	- var activeIndex = 5
	- var pageName = 'Contacts'
	- var pageClass = ''

block title
	title=pageName

block page
	// Page Header
	+navbar-default({})

	+page-title({
		title: pageName,
		imageName: 'breadcrumbs-contacts',
		path: [['Additional Pages', '#'], [pageName]]
	})

	section.section-md.bg-white
		.shell
			.range.range-60.range-center
				.cell-sm-8
					.text-center.inset-lg-right-70
						h3.text-regular.spacing-0 Get in Touch
						p.text-width-600 You can contact us any way that is convenient for you. We are available 24/7 via fax, email or telephone. You can also use a quick contact form on the right or visit our office personally.

						// RD Mailform
						form.rd-mailform.form-variant-1(data-form-output="form-output-global", data-form-type='contact', method='post', action='bat/rd-mailform.php')
							.range.range-sm-bottom.range-spacing-20.range-20
								.cell-sm-6
									.form-wrap
										input#contact-first-name.form-input(type="text" name="name" data-constraints='@Required')
										label.form-label(for="contact-first-name") Your name

								.cell-sm-6
									.form-wrap
										input#contact-phone.form-input(type="text" name="phone" data-constraints='@Numeric')
										label.form-label(for="contact-phone") Phone

								.cell-xs-12
									.form-wrap
										textarea#contact-message.form-input(name="message" data-constraints="@Required")
										label.form-label(for="contact-message") Your Message

								.cell-sm-6
									.form-wrap
										input#contact-email.form-input(type="email" name="email" data-constraints="@Email @Required")
										label.form-label(for="contact-email") E-mail

								.cell-sm-6
									button(type="submit").button.button-gray-1.button-effect-ujarak.button-block send message

				.cell-sm-4.cell-xs-6
					.inset-horizontal-1
						.contacts-sidebar
							.contacts-sidebar-item
								p.title Get social
								+widget-list([
									{
										"icon": "fa fa-facebook",
										"href": "#"
									},
									{
										"icon": "fa fa-twitter",
										"href": "#"
									},
									{
										"icon": "fa fa-google",
										"href": "#"
									},
									{
										"icon": "fa fa-youtube",
										"href": "#"
									}

								], 'text-gray-13', '')

							.contacts-sidebar-item
								p.title Phone
								p.contact-panel
									span.text-primary.icon-sm.material-icons-local_phone
									a(href="callto:#") 1-800-1234-567

							.contacts-sidebar-item
								p.title E-mail
								p.contact-panel
									span.text-primary.mdi.mdi-xsm.mdi-email-outline
									a(href="mailto:#") info@demolink.org

							.contacts-sidebar-item
								p.title Address
								.unit.unit-spacing-xs.unit-horizontal
									.unit__left
										span.text-primary.icon-xsm.material-icons-location_on

									.unit__body
										a(href="#").address 6036 Richmond hwy., Alexandria, VA, 2230

	// Page Footer
	include ../sections/_footer-var-2