extends  ../_skeleton

block variables
	- var pageName = 'Coming soon'

block title
	title=pageName

block page
	section.section.one-screen-page.bg-soon.bg-image
		.one-screen-page-inner
			// Page Header
			header.page-head
				.rd-navbar-brand.brand
					a.brand-logo(href='index.html')
						+png(logoInverse)

			// Page Content
			section
				.shell
					.range.range-condensed.range-xs-center
						.cell-sm-10
							h3.page-subtitle.title-decor-bottom-small.decor-secondary-light We're getting ready to launch in
							.countdown-wrap.block-centered
								// TimeCircles
								.DateCountdown(data-date='2017-11-10 00:00:00' data-circle-bg='#f5f5f5' data-circle-inner-color='#aa6ecf')
							p.text-width-380 Our website is under construction, we are working very hard to give you the best experience on our new web site.
							// RD Mailform
							form.rd-mailform.form-inline(data-form-output="form-output-global", data-form-type='subscribe', method='post', action='bat/rd-mailform.php')
								.form-wrap
									input#subscribe-email.form-input(type="email" name="email" data-constraints="@Email @Required")
									label.form-label.form-label-dark(for="subscribe-email") info@demolink.org
								button(type="submit").button.btn-anis.button-secondary-light Subscribe
			='\n'


			// Page Footer
			footer.page-foot.text-center
				p.copyright=brandName
					=" "
					| &#169; #[span(id="copyright-year")].
					=" "
					a(href="privacy-policy.html") Privacy Policy

						| &nbsp;
						br.veil-sm
